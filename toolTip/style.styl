/* variables */ 
$color = #74777b
$bgcolor = #47c9af

/* common*/ 
html
    width: 100%
    height: 100%
    -webkit-text-size-adjust: none
    -moz-text-size-adjust: none
    -ms-text-size-adjust: none
    font-size: 15px
body
    margin: 0
    padding: 0
    width: 100%
    height: 100%
    background: $bgcolor
    color: $color
    font-weight: 300
    font-size: 1.5rem
    font-family: Arial, Helvetica, sans-serif
   
ul
    list-style: none
    padding: 0
    margin: 0

a:link,a:visited,a:focus
    text-decoration: none
    outline: none

*,*:after,*:before
    box-sizing: border-box
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    -o-box-sizing:border-box
    -ms-box-sizing:border-box

*:after,*:before
    display: block
    content: ""

*:after
    clear:both


//   navgatior  
.nav
    width: 800px
    height: 300px
    margin: 200px auto

    li 
        display: inline-block //水平排列
        margin: 0 1.2rem
        
        
.tooltip
    display: inline
    font-weight: 300
    color: rgba(0,0,0,0.3)
    position: relative
    z-index: 999
    transition: color 0.3s

    &-content
        // display: none
        opacity: 0
        transition: opacity 0.2s,transform 0.5s   //动画效果
        position: absolute
        z-index: 9999
        width: 80px
        height: 80px
        border-radius: 50%
        background: #fff
        left:50%
        margin-left: -40px
        bottom: 100%
        margin-bottom: 25px
        text-align: center
        padding-top: 25px
        &-tail
            display: block
            position: absolute
            background-size: 100%
            top: 100%
            left:50%
            margin-left: -7px
            margin-top:-20px
            color:#fff
            font-size: 2 rem
        i    
            font-size: 2 rem
            color: $bgcolor
            opacity: 0
            // display: none
            transition: opacity 0.3s

        
    &-effect-1 &-content
        transform: translate3d(0,10px,0) rotate3d(1,1,1,45deg) //xyz 0~1
        -webkit-transform: translate3d(0, 10px, 0) rotate3d(1,1,1,45deg)
        -ms-transform: translate3d(0, 10px, 0)
        transform-origin: center bottom   // 旋转中心点 水平 垂直 50% 100%
        -webkit-transform-origin: center bottom
        -ms-transform-origin:  center bottom
        i 
           transform:scale3d(0,0,1);
           -webkit-transform: scale3d(0, 0, 1);

    &-effect-2 &-content
        transform: translate3d(0,20px,0)      
        -webkit-transform: translate3d(0,20px,0)
    
    &-effect-3 &-content
        transform: translate3d(0,20px,0) rotate3d(0,1,0,150deg) scale3d(0, 0, 1)
    
    &-effect-4 &-content
        transform: translate3d(0,-30px,0)
    
    &-effect-5 &-content
        transform: translate3d(0,110px,0) rotate3d(1,1,1,-45deg) scale3d(0,0,0)
        transform-origin: center bottom

.tooltip:hover .tooltip-content,
    
.tooltip:hover .tooltip-content i
    opacity: 1
    -webkit-transform: translate3d(0,0,0) rotate3d(1,1,1,0) scale3d(1, 1, 1)
    transform: translate3d(0,0,0) rotate3d(1,1,1,0) scale3d(1, 1, 1)
    
.tooltip:hover
    color:#fff